<!DOCTYPE html>
<html>
<head>
  <title>Rainforest</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>

	<% if flash[:notice] %>
		<p><%= flash[:notice] %></p>
	<% end %>
	<% if flash[:alert] %>
		<p><%= flash[:alert] %>
	<% end %>

<%= yield %>

	<% if current_user %>
		<p>Signed in as: <%= current_user.email %> <% link_to "Log Out", session_path("current"), :method => "delete" %></p>
	<%= else %>
		<p><% link_to "Log In", new_session_path %> or <%= link_to "Sign Up", new_user_path %></p>
	<% end %>

</body>
</html>
